<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/showinfo"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_currentCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="120dp"
            android:background="#c0c0c0"
            android:text="当前单位"
            android:textColor="#cc0033"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/ll_lowwarn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/edt_company"
                android:layout_width="fill_parent"
                android:layout_height="64dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_edittext"
                android:hint="请选择"
                android:paddingLeft="10dp"
                android:textColor="#ff000000"
                android:textSize="18sp" >

            </EditText>

            <ImageButton
                android:id="@+id/bt_dropdown"
                android:layout_width="36px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/down_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_lowwarn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_lowwarn1"
            android:layout_marginTop="20dp" >

            <EditText
                android:id="@+id/edt_userReginCode"
                android:layout_width="fill_parent"
                android:layout_height="64dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_edittext"
                android:hint="请输入电子标签号"
                android:inputType="number"
                android:maxLength="8"
                android:paddingLeft="10dp"
                android:textColor="#ff000000"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="36px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/down_arrow"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_query"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_alignLeft="@+id/ll_lowwarn"
            android:layout_below="@+id/ll_lowwarn"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="#0aa1cc"
            android:text="查询"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>